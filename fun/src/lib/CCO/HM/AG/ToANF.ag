attr Tm  syn anf :: Tm
attr Tm_ syn anf_ :: Tm_

sem Tm
  | Tm lhs.anf = Tm @pos @t.anf_

sem Tm_
  | Var Nat lhs.anf_ = @self
  | Lam lhs.anf_ = Lam @x @t1.anf
  | App lhs.anf_ = if isANF @t1 then @t1.anf else Let (binds @t2) ( App bind @t1 )
  | Let lhs.anf_ = Let @x @t1.anf @t2.anf
