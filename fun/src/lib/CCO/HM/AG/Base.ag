imports
{
import CCO.SourcePos
}

-------------------------------------------------------------------------------
-- Syntax
-------------------------------------------------------------------------------

{
type Var = String    -- ^ Type of variables.
}

data Tm
  | Tm  pos :: {SourcePos}  t :: Tm_

data Tm_
  | Nat  i :: {Int}
  | Var  x :: {Var}
  | Lam  x :: {Var}  t1 :: Tm
  | App  t1 :: Tm  t2 :: Tm
  | Let  x :: {Var}  t1 :: Tm  t2 :: Tm
  | Prim fn :: String -- args :: {[Tm]}
  | If cond :: Tm t1 :: Tm t2 :: Tm -- if cond then t1 else t2